#!/usr/bin/env php
<?php

$pattern =<<<'PATTERN'
{ "$ref": "./parameters.json#/parameters/filterGroups%1$d_filters%2$d_field" },
{ "$ref": "./parameters.json#/parameters/filterGroups%1$d_filters%2$d_value" },
{ "$ref": "./parameters.json#/parameters/filterGroups%1$d_filters%2$d_conditionType" },

PATTERN;

for ($group = 0; $group < 10; $group++) {
    for ($filter = 0; $filter < 10; $filter++) {
        printf($pattern, $group, $filter);
    }
}

$pattern = <<<'SORTS'
{ "$ref": "./parameters.json#/parameters/sortOrders%1$d_field" },
{ "$ref": "./parameters.json#/parameters/sortOrders%1$d_direction" },

SORTS;

for ($sort = 0; $sort < 10; $sort++) {
    printf($pattern, $sort);
}

echo <<<'FOOT'
{ "$ref": "./parameters.json#/parameters/pageSize" },
{ "$ref": "./parameters.json#/parameters/currentPage" }
FOOT;
